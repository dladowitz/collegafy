!!! 5
%html(lang="en-US")
  %head
    %title Thinkafy
    %link{:href => "http://www.thinkafy.com", :rel => "canonical"}/
    %meta{:content => "Thinkafy", :property => "og:site_name"}/
    %meta{:content => "Thinkafy", :property => "og:title"}/
    %meta{:content => "http://www.thinkafy.com", :property => "og:url"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "Solving the second most annoying problem in your office.", :property => "og:description"}/
    %meta{:content => "http://www.thinkafy.com/assets/background/hero_text_2.png", :property => "og:image"}/
    %meta{:content => "Thinkafy", :itemprop => "name"}/
    %meta{:content => "http://www.thinkafy.com", :itemprop => "url"}/
    %meta{:content => "Thinkafy", :name => "twitter:title"}/
    %meta{:content => "http://www.thinkafy.com", :name => "twitter:url"}/
    %meta{:content => "summary", :name => "twitter:card"}/
    %meta{:content => "", :name => "description"}/

    = stylesheet_link_tag    'guest_pages/guest', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'guest_pages/guest', 'data-turbolinks-track' => true
    = csrf_meta_tags

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-71845865-1', 'auto');
      ga('send', 'pageview');

  %body
    -#TODO look at rendering flash partial instead. Might have been a problem or something
    - flash.each do |name, message|
      %strong
        %div{:class => "alert alert-#{name}", :role => "alert"}
          = message
    #page
      %header#header.site-header
        = render "layouts/guest_pages/header"

      = yield

      %footer#footer.site-footer.mt100
        = render "layouts/guest_pages/footer"
